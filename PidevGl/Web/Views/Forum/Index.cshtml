@model Web.Models.Forum
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="=" width="device-width" />
    <title> Forum</title>
</head>
<body>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
         
                    <tr>
                        <th>User</th>
                        <th>Contenu</th>
                        <th>Date</th>

                    </tr>
                    @foreach (var m in ViewBag.result)
                    {
                        <tr>
                            <td>@m.post_id</td>
                            <td>@m.text</td>
                            <td>
                                @Convert.ToDateTime(m.dates).ToString("MM/dd/yyyy")

                        </td>
                            <td>
                                <a href="@Url.Action("remove","Forum", new {id=@m.post_id })"
                                   class="btn btn-primary btn-lg">delete</a>
                            </td>
                    </tr>
                    }
                </table>
                </div></div>
</body>

</html>
<script type="text/javascript">
        function removeObj(url) {
            var oReq = new XMLHttpRequest();
            oReq.addEventListener("load", function () {
                location.reload();
            });
            oReq.open("DELETE", url);
            oReq.setRequestHeader("Access-Control-Allow-Origin", "*");
            oReq.send();
        }
</script>
